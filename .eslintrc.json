{
  "extends": [
    "flying-sheep",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "import/extensions": 0,
    "no-console": 0,
    "comma-dangle": [2, "only-multiline"]
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  },
  "ignorePatterns": [
    "index.js",
    "index.d.ts",
    "test/fixtures/baselines/**/*",
    "test/fixtures/results/**/*"
  ]
}
